{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node", // Change from "bundler" to "Node"
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "types": ["cypress"] // Add this line to include Cypress types
  },
  "include": ["vite.config.ts", "cypress.config.ts"] // Include both config files
}
